{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(cargo build*)",
      "Bash(cargo test*)",
      "Bash(cargo check*)",
      "Bash(cargo fmt*)",
      "Bash(cargo clippy*)",
      "Bash(cargo doc*)",
      "Bash(make *)",
      "Bash(docker-compose *)",
      "Bash(docker compose *)",
      "Bash(git status*)",
      "Bash(git diff*)",
      "Bash(git log*)",
      "Bash(git branch*)",
      "Bash(git fetch*)",
      "Bash(git pull*)",
      "Bash(git add*)",
      "Bash(git commit*)",
      "Bash(git push*)",
      "Bash(git checkout*)",
      "Bash(git stash*)",
      "Bash(gh pr *)",
      "Bash(gh issue *)",
      "Bash(curl -s http://localhost*)",
      "Bash(diesel migration *)",
      "Read",
      "Glob",
      "Grep"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -rf ~)",
      "Bash(git push --force*)",
      "Bash(git reset --hard*)",
      "Bash(git clean -f*)",
      "Bash(docker system prune*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write.*\\.rs$|Edit.*\\.rs$",
        "hooks": [
          {
            "type": "command",
            "command": "echo '[hook] Rust file modified — remember to run: cargo fmt && cargo clippy'"
          }
        ]
      },
      {
        "matcher": "Write.*\\.proto$|Edit.*\\.proto$",
        "hooks": [
          {
            "type": "command",
            "command": "echo '[hook] Proto file modified — rebuild required: cargo build in api-gateway and auth-service'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "echo '[hook] Task complete. Consider running: /test or /review before committing.'"
          }
        ]
      }
    ]
  }
}
